<h1><%= @restaurant.name %></h1>
<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %></li>
    <li><%= review.rating %></li>
  <% end %>
</ul>
<ul>
<button type="button" class="btn btn-outline-primary"><%= link_to 'Back', restaurants_path %></button>
<br>
<br>
<button type="button" class="btn btn-outline-primary"><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></button>
</ul>
<br>
<br>
<button type="button" class="btn btn-danger"><%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</button>
